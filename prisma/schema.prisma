datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL_S")
}

model Post {
  // id       String @id @default(auto()) @map("_id") @db.ObjectId
  id       String @id @default(uuid())
  title    String
  username String
}

model Data {
  id       String   @id @default(uuid())
  date     DateTime
  person   Person   @relation(fields: [personId], references: [id])
  personId String
}

model Person {
  id         String   @id @default(uuid())
  position   Position @relation(fields: [positionId], references: [id])
  positionId String
  lastName   String
  firstName  String
  surname    String
  birthday   String
  address    String
  phone1     Int
  phone2     Int?
  data       Data[]
}

model Position {
  id       String   @id @default(uuid())
  position String
  persons  Person[]
}
